<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navDrawer_header_height"
    android:background="@color/grey_200"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_size_16">

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="@dimen/dimen_size_80"
        android:layout_height="@dimen/dimen_size_80"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dimen_size_8"
        android:src="@drawable/smile_sad" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimen_size_8"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblName"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@sample/sampledata.json/nameProfile" />

        <TextView
            android:id="@+id/lblMemberType"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@sample/sampledata.json/memberType" />

        <TextView
            android:id="@+id/lblLevel"
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@sample/sampledata.json/levelShort" />

    </LinearLayout>

</LinearLayout>